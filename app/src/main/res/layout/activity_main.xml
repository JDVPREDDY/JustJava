<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/pad16"
        android:text="@string/quantity"
        android:textAllCaps="true"
        android:textAppearance="?android:textAppearanceMedium" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/plus"
        android:textStyle="bold"
        android:onClick="increment"
        android:layout_marginLeft="@dimen/pad16"/>
    <TextView
        android:id="@+id/quantity_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/pad16"
        android:paddingLeft="@dimen/pad16"
        android:paddingRight="@dimen/pad16"
        android:text="@string/zero"
        android:textColor="@color/black"
        android:textSize="@dimen/pad16" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/minus"
        android:textStyle="bold"
        android:onClick="decrement"
        android:layout_marginLeft="@dimen/pad16"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/pad16"
        android:paddingBottom="@dimen/pad16"
        android:paddingLeft="@dimen/pad16"
        android:paddingRight="@dimen/pad16"
        android:text="@string/price"
        android:textAppearance="?android:textAppearanceMedium"
        android:textAllCaps="true" />
    <TextView
        android:id="@+id/price_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/pad16"
        android:paddingLeft="@dimen/pad16"
        android:paddingRight="@dimen/pad16"
        android:text="@string/value"
        android:textColor="@color/black"
        android:textSize="@dimen/textsize" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/order"
        android:textStyle="bold"
        android:onClick="submitOrder"
        android:layout_marginLeft="@dimen/pad16"/>

</LinearLayout>
</ScrollView>